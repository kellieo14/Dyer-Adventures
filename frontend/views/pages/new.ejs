<% include ../partials/header %>
<div class="container-fluid new-page-form" id="new-page-form">
    <div class="arrow-right edit-back-arrow">
        <div class="back-button-div">
            <a class="back-button" href="/admin"><i class="fas fa-arrow-left"></i></a>
        </div>
    </div>
    <h1 class="new-page-title">Create a New Page</h1>
    <div class="container">
        <form class="new-form" action="/" method="POST">
            <input class="experience-input" type="text" name=pageName placeholder="ROUTE">
            <input class="experience-input" type="text" name=title placeholder="TITLE">
            <textarea class="experience-input" rows="10" name=content placeholder="CONTENT"></textarea>
            <input class="experience-input" type="text" name=image placeholder="IMAGE URL">
            <br>
            <div class="row">
                <div class="col-lg-12 submit-row">
                    <button class="btn create submit">Create</button>
                </div>
            </div>
        </form>
    </div>
</div>
<% include ../partials/footer %>