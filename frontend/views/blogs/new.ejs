<% include ../partials/header %>
<div class="container-fluid new-blog-div no-gutters">
    <div class="arrow-right edit-back-arrow">
        <div class="back-button-div">
            <a class="back-button" href="/admin"><i class="fas fa-arrow-left"></i></a>
        </div>
    </div>
    <h1>New Blog Post</h1>
    <form class="new-form" action="/blogs" method="POST">
        <input class="experience-input" type="text" name=title required placeholder="TITLE">
        <input class="experience-input" type="text" name=author required placeholder="AUTHOR">
        <div class="row">
            <div class="col-sm-4 col-xs-4">
                <input class="experience-input" type="text" name=month required placeholder="MONTH">
            </div>
            <div class="col-sm-4 col-xs-4">
                <input class="experience-input" type="text" name=day required placeholder="DAY">
            </div>
            <div class="col-sm-4 col-xs-4">
                <input class="experience-input" type="text" name=year required placeholder="YEAR">
            </div>
        </div>
        <textarea class="experience-input" rows="10" name=description required placeholder="CONTENT"></textarea>
        <input class="experience-input" type="text" name=image required placeholder="IMAGE URL">
        <input class="experience-input" type="text" name=caption required placeholder="IMAGE CAPTION">
        <div class="row">
            <div class="col-lg-12 submit-row">
                <button class="btn create submit">CREATE</button>
            </div>
        </div>
    </form>
</div>
<% include ../partials/footer %>