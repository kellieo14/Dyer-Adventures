<% include ../partials/header %>
<div class="gallery-container gallery-view-album">
    <div class="arrow-right">
        <div class="back-button-div">
            <a class="back-button" href="/gallery"><i class="fas fa-arrow-left"></i></a>
        </div>
    </div>
    <div class="gallery-thumbnail-container row ">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <div class="view-album-title-container">
                <div class="view-album-title-div">
                    <div class="gallery-title">
                        <h1><%= gallery.title %></h1>
                        <p><%= gallery.dates %></p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <div class="gallery-description-div">
                <div class="gallery-description">
                    <h6><%= gallery.description %></h6>
                </div>
            </div>
        </div>
    </div>
    <section id="gallery">
        <div class="container">
            <div id="image-gallery">
                <div class="row">
                    <% imageUrls.forEach(function(imageUrl, index){ %>
                    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12 image">
                        <div class="img-wrapper">
                            <a href="<%= imageUrl %>"><img src="<%= imageUrl %>" class="img-responsive"></a>
                            <div class="img-overlay">
                                <i class="fa fa-expand" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </section>
</div>
<% include ../partials/footer %>